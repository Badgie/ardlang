int[] array = {3,7,8,1,14}
int sum = 0
Button btn
LCD lcd

task incrTask(100) {
    if (btn.active()) {
        for (int i = 0; i < array.length(); i++) {
            array[i]++
        }
    }
}

task displaySum(1000) {
    for (int j = 0; j < array.length(); j++) {
        sum = sum + array[j]
    }

    lcd.write(sum)
}
